{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterId": "cart-cluster",
        "Match": {
          "Path": "/api/cart/{**catch-all}"
        }
      },
      "auth-swagger": {
        "ClusterId": "auth-swagger-cluster",
        "Match": {
          "Path": "/auth/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "cart-swagger": {
        "ClusterId": "cart-swagger-cluster",
        "Match": {
          "Path": "/cart/swagger/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/cart"
          }
        ]
      }
    },
    "Clusters": {
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://auth-service:8080/"
          }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "cart-destination": {
            "Address": "http://cart-service:8081/"
          }
        }
      },
      "auth-swagger-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://auth-service:8080/"
          }
        }
      },
      "cart-swagger-cluster": {
        "Destinations": {
          "cart-destination": {
            "Address": "http://cart-service:8081/"
          }
        }
      }
    }
  }
}
